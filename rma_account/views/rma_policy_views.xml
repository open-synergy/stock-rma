<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record id="rma_policy_form" model="ir.ui.view">
            <field name="name">rma.policy.form</field>
            <field name="model">rma.policy</field>
            <field name="inherit_id" ref="rma.rma_policy_form"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//field[@name='rma_supplier_policy_ok']" position="after">
                        <field name="refund_policy_ok"/>
                    </xpath>
                </data>
            </field>
        </record>
</odoo>
